<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_photoPreview_hj_takePhoto"
        app:title="照片预览"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager_hj_takePhoto"
        >
    </androidx.viewpager.widget.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom|end"
            android:background="@android:color/black"
            android:alpha="0.5"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic__delete_24_white_hj_takephoto"
                android:id="@+id/delete_photoPreview_hj_takePhoto"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic__crop_24_white_hj_takephoto"
                android:id="@+id/croup_photoPreview_hj_takePhoto"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>